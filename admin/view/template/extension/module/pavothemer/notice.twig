<div class="alert alert-{{ type }} alert-dismissible">
	{% if type == 'danger' %}
		<i class="fa fa-exclamation-circle"></i>
	{% elseif type == 'info' %}
		<i class="fa fa-info-circle"></i>
	{% elseif type == 'success' %}
		<i class="fa fa-info-success"></i>
	{% endif %} {{ message }}
  	<button type="button" class="close" data-dismiss="alert">&times;</button>
</div>