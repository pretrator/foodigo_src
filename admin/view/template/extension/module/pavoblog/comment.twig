{{ header }}{{ column_left }}
<div id="content">
  	<div class="page-header">
	    <div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-comment" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="{{ save_button }}"><i class="fa fa-save"></i></button>
				<a href="{{ delete_link }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="return confirm('{{ text_confirm }}')"><i class="fa fa-trash-o"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
			</ul>
		</div>
  	</div>
  	<div class="container-fluid">
		{% if errors.error_warning %}
		    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ errors.error_warning }}
	      		<button type="button" class="close" data-dismiss="alert">&times;</button>
		    </div>
	    {% endif %}
	    {% if success %}
		    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
		      	<button type="button" class="close" data-dismiss="alert">&times;</button>
		    </div>
	    {% endif %}
	    <div class="row">
			<div class="col-xs-12">
		    	<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title"><i class="fa fa-list"></i> {{ comment_heading_title }}</h3>
					</div>
					<div class="panel-body">
						<form action="{{ action }}" class="form-horizontal" method="post" enctype="multipart/form-data" id="form-comment">
						  	<input type="hidden" name="comment_id" value="{{ comment.comment_id }}" />
						  	<div class="form-group">
						  		<label class="col-sm-2 control-label" for="comment_status">{{ text_comment_status }}</label>
						  		<div class="col-sm-10">
						  			<select class="form-control" id="comment_status" name="comment_status">
						  				<option value="1" {{ comment.comment_status == 1 ? ' selected' : '' }}>{{ text_yes }}</option>
						  				<option value="0" {{ comment.comment_status == 0 ? ' selected' : '' }}>{{ text_no }}</option>
						  			</select>
						  		</div>
						  	</div>
						  	<div class="form-group">
						  		<label class="col-sm-2 control-label" for="comment_text">{{ text_comment }}</label>
						  		<div class="col-sm-10">
						  			<textarea class="form-control" name="comment_text" id="comment_text">{{ comment.comment_text }}</textarea>
						  			{% if ( errors.comment_text ) %}
						  				<div class="text-danger">{{ errors.comment_text }}</div>
						  			{% endif %}
						  		</div>
						  	</div>
						  	<div class="form-group">
						  		<label class="col-sm-2 control-label" for="comment_name">{{ text_comment_name }}</label>
						  		<div class="col-sm-10">
						  			<input type="text" name="comment_name" class="form-control" id="comment_name" value="{{ comment.comment_name }}" />
						  			{% if ( errors.comment_name ) %}
						  				<div class="text-danger">{{ errors.comment_name }}</div>
						  			{% endif %}
						  		</div>
						  	</div>
						  	<div class="form-group">
						  		<label class="col-sm-2 control-label" for="comment_email">{{ text_comment_email }}</label>
						  		<div class="col-sm-10">
						  			<input type="text" name="comment_email" class="form-control" id="comment_email" value="{{ comment.comment_email }}" />
						  			{% if ( errors.comment_email ) %}
						  				<div class="text-danger">{{ errors.comment_email }}</div>
						  			{% endif %}
						  		</div>
						  	</div>
						</form>
					</div>
		    	</div>
		  	</div>
		</div>
  	</div>
</div>
{{ footer }}