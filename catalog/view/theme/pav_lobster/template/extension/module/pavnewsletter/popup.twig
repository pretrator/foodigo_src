<div class="pav-newsletter {{ prefix }} {{layout}} pav-newsletter hide" id="newsletter_{{ id }}" data-mode="{{ mode }}">
		<form id="formNewLestter_{{ id }}" method="post" action="{{ action }}" class="formNewLestter  white-popup newsletter-bg" {% if banner is not empty%} style="background-image: url('{{ banner }}')" {% endif %}>
			<div class="inner">
				<h3 class="hide">{{ entry_newsletter }}</h3>
				<div class="description-top">
					{{ description }}
				</div>
				<div class="description-bottom">
					{{ social }}
				</div>
				<div class="form-group">
					<div class="checkbox">
				    <label><input type="checkbox" checked="false"> {{ text_dont_show }} </label>
				  </div>
				</div>
				<div class="form-group">
					<input type="text" class="form-control input-md inputNew" {% if customer_email is not defined %} onblur="javascript:if(this.value=='')this.value='{{ default_input_text }}';" onfocus="javascript:if(this.value=='{{ default_input_text }}')this.value='';"{% endif %} size="18" name="email">
				</div>
				<div class="button-submit">
					<button type="submit" name="submitNewsletter" class="btn btn-link">{{ button_subscribe }}</button>
				</div>	
				<input type="hidden" value="1" name="action">
				<div class="valid"></div>				
			</div>				
		</form>
</div>

<script type="text/javascript"><!--
	(function($){
		$(document).ready(function(){
			$("#newsletter_{{ id }}").pavoNewsletter({
			    message: '{{ valid_email }}'
			});//.work(  '{{ valid_email }}' );
		});
	})(jQuery);
--></script>