{% set id = random(1..9) + random() %}
<div class="pavo-widget-custom_testimonial {{ settings.extra_class ? [ ' ', settings.extra_class ] | join() : '' }} {{ settings.layout }}">
    <div class="custom-testimonial-inner">
        <div id="custom-testimonial{{id}}" class="swiper-container swiper-container-horizontal {% if settings.loop == "false" and (settings.get_items|length <= settings.item*settings.rows) %}swiper-no-swiping{% endif %}">
            {% if settings.pagination == "true" %}
                <div class="pagination-{{id}} round"></div>
            {% endif %}
            <div class="swiper-wrapper">
                {% for item in settings.get_items %}
                    <div class="swiper-slide">
                        <div class="testimonials-body">
                            {% if item.title %}
                                <h4>{{item.title}}</h4>
                            {% endif %}
                            {% if item.subtitle %}
                            <div class="testimonial-subtitle">
                                {{item.subtitle}}
                            </div>
                            {% endif %}
                            {% if item.content %}
                            <div class="testimonial-content">
                                {{item.content}}
                            </div>
                            {% endif %}
                            {% if item.rating %}
                            <div class="rating">
                                {% for i in 1..5 %}
                                {% if item.rating < i %}
                                <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                                {% else %}
                                <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
                                {% endif %}
                                {% endfor %}
                            </div>
                            {% endif %}
                            {% if item.image %}
                            <div class="testimonial-avatar">
                                <img src="{{ item.image }}" alt="avatar-{{item.name}}" class="img-responsive" />
                            </div>
                            {% endif %}
                            {% if item.name or item.note %}
                            <div class="testimonials-profile">
                                <div class="testimonials-name">
                                    {% if item.name %}
                                        {{item.name}}
                                    {% endif %}
                                </div>
                                <div class="testimonials-note">
                                    {% if item.note %}
                                    {{text_from}} {{item.note}}
                                {% endif %}
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% if settings.navigation %}
                <div class="swiper-pager">
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next swiper-button-next{{id}}"></div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
<script type="text/javascript">
(function($){
    $(document).ready(function(){
        var options = {
            pause: 'hover',
            slidesPerView: {{ settings.item ? settings.item : 1 }},
            loop:{{ settings.loop == 'true' ? settings.loop : 'false'}},
            autoplay: {% if settings.auto_play == 'true' %}{{ settings.interval }}{% else %}0{% endif %},
            noSwipingClass: 'swiper-no-swiping',
            slidesPerColumn:{{ settings.rows ? settings.rows : 1 }},
            spaceBetween: 0,
            {% if settings.loop != "true" %}
            onReachEnd:function(swiper){
                $('.swiper-button-next').one('click',function () {
                    swiper.slideTo(0, 800, false);
                });
            },
            {% endif %}
            breakpoints: {
                767: {
                    slidesPerView: 1,
                    {% if (settings.get_items|length) > (1*settings.rows) %}
                    noSwiping: false
                    {% endif %}
                },
                991: {
                    slidesPerView: 1,
                    {% if (settings.get_items|length) > (1*settings.rows) %}
                    noSwiping: false
                    {% endif %}
                },
            }
        };
        {% if settings.pagination == "true" %}
            options.pagination = '.pagination-{{id}}';
            options.paginationClickable = true;
        {% endif %}
        {% if settings.navigation %}
            options.nextButton = '.swiper-button-next';
            options.prevButton = '.swiper-button-prev';
        {% endif %}
        $('#custom-testimonial{{id}}').swiper(options);
    });
})(jQuery);
</script>
