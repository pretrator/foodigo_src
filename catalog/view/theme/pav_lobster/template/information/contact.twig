{{ header }}
<div id="information-contact">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <iframe class="google-map" src="https://maps.google.com/maps?q={{ geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15&output=embed" width="100%" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-md-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9' %}
    {% else %}
    {% set class = 'col-md-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      {{ content_top }}
      <div class="row">
      <div class="col-md-5 col-sm-12 col-xs-12">
        <h3>{{ text_location }}</h3>
        <div class="table-responsive">
          <table class="info-table">
            <tbody>
              <tr class="info-table-row">
                 <th class="info-table-icon"><i class="fa fa-long-arrow-right"></i></th>
                 <td class="info-table-content">{{ store }}</td>
              </tr>
              <tr class="info-table-row">
                 <th class="info-table-icon"><i class="fa fa-map-marker"></i></th>
                 <td class="info-table-content">
                  {{ address }}
                  {% if geocode %}
                   <a href="https://maps.google.com/maps?q={{ geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15" target="_blank" class="btn btn-link"><i class="fa fa-map-marker"></i> {{ button_map }}</a>
                  {% endif %}
                 </td>
              </tr>
              <tr class="info-table-row">
                 <th class="info-table-icon"><i class="fa fa-phone"></i></th>
                 <td class="info-table-content">{{ telephone }}</td>
              </tr>
              <tr class="info-table-row">
                 <th class="info-table-icon"><i class="fa fa-fax"></i></th>
                 <td class="info-table-content">{{ fax }}</td>
              </tr>
              <tr class="info-table-row">
                 <th class="info-table-icon"><i class="fa fa-folder-open"></i></th>
                 <td class="info-table-content">{{ open }}</td>
              </tr>
              <tr class="info-table-row">
                 <th class="info-table-icon"><i class="fa fa-commenting-o"></i></th>
                 <td class="info-table-content">{{ comment }}</td>
              </tr
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-7 col-sm-12 col-xs-12">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
          <fieldset>
            <h3>{{ text_contact }}</h3>
            <div class="form-group required">
              <label class="col-sm-2 hidden control-label" for="input-name">{{ entry_name }}</label>
              <div class="col-sm-12">
                <input placeholder="{{ entry_name }}" type="text" name="name" value="{{ name }}" id="input-name" class="form-control" />
                {% if error_name %}
                <div class="text-danger">{{ error_name }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 hidden control-label" for="input-email">{{ entry_email }}</label>
              <div class="col-sm-12">
                <input placeholder="{{ entry_email }}" type="text" name="email" value="{{ email }}" id="input-email" class="form-control" />
                {% if error_email %}
                <div class="text-danger">{{ error_email }}</div>
                {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 hidden control-label" for="input-enquiry">{{ entry_enquiry }}</label>
              <div class="col-sm-12">
                <textarea placeholder="{{ entry_enquiry }}" name="enquiry" rows="10" id="input-enquiry" class="form-control">{{ enquiry }}</textarea>
                {% if error_enquiry %}
                <div class="text-danger">{{ error_enquiry }}</div>
                {% endif %}
              </div>
            </div>
            {{ captcha }}
          </fieldset>
          <div class="buttons">
            <div class="pull-right">
              <input class="btn btn-primary" type="submit" value="{{ button_submit }}" />
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="row">>
      <div class="col-md-12 col-sm-12">
          <div class="container">
              copy google map + location vao day, xoa code cu ben tren di 
          </div>
      </div>
    </div>               

    <div class="row no-margin contact-bg">
      <div class="col-md-12 col-sm-12">
          <div class="container">
              copy form contact vao day
          </div>
      </div>
    </div>


{{ footer }}
