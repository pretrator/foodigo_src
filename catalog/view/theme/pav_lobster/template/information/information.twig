{{ header }}

{% if breadcrumb %}
  <div class="container">
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
{% endif %}
{% if description matches '{pa-row-container}'  %}
<div id="information-information" class="pav-builder">  
{% else %}
<div id="information-information" class="container">
{% endif %}   
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-md-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9' %}
    {% else %}
    {% set class = 'col-md-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      {% if description matches '{pa-element-container$}'  %}
      <h1>{{ heading_title }}</h1>
      {% endif %}
      {{ description }}{{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}