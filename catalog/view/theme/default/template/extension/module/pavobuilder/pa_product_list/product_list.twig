<div class="product-list-widget {{settings.layout}} {{settings.extra_class}}">

	{% if settings.title_product %}
	<div class="widget-title"><h3>{{ settings.title_product }}</h3></div>
	{% endif %}	
	{% if settings.subtitle_product and settings.subtitle_product != '<p><br></p>' %}
	<div class="widget-description">{{ settings.subtitle_product }}</div>
	{% endif %}	
	<div class="product-list-layout">
	 	{% for product in settings.products %}

			 <div class="media">
			  <div class="media-left">
			   	<div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
			  </div>
			  <div class="media-body">
			    <h4 class="media-heading"><a href="{{ product.href }}">{{ product.name }}</a></h4>
				{% if product.rating %}
			    <div class="rating">{% for i in 1..5 %}
			      {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
			      {% endfor %}</div>
			    {% endif %}
			    {% if product.price %}
			    <p class="price"> {% if not product.special %}
			      {{ product.price }}
			      {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
			      {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %} </p>
			    {% endif %} 
			  </div>
			</div>

		{% endfor %}
	</div>
</div>	 
